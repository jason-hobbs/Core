<div class="bodywrapper">
<header id="content-header">
  <h3 id='storyheader'>Sign In</h3>
</header>

<%= form_tag(session_path) do %>



<div class="row left">
  <div class="small-12 columns">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, autofocus: true, required: true, class: "radius entry" %>
  </div>
</div>



<div class="row left">
  <div class="small-12 columns">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true, class: "radius entry" %>
  </div>
</div>

<div class="row left">
  <div class="small-12 columns">
    <%= submit_tag "Sign In", class: 'button tiny radius' %>
  </div>
</div>
<% end %>
</div>
