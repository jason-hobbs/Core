<div class="bodywrapper">
<header id="content-header">
  <h3 id='storyheader'>Sign In</h3>
</header>

<%= form_tag(session_path) do %>


<div class="row">
  <div class="large-6 columns">
    <div class="row collapse prefix-radius">
      <div class="small-3 medium-2 columns">
        <span class="prefix">Email</span>
      </div>
      <div class="small-9 medium-10 columns">
        <%= email_field_tag :email, nil, autofocus: true, required: true, class: "radius entry", :autocomplete => :off %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-6 columns">
    <div class="row collapse prefix-radius">
      <div class="small-3 medium-2 columns">
        <span class="prefix">Password</span>
      </div>
      <div class="small-9 medium-10 columns">
        <%= password_field_tag :password, nil, required: true, class: "radius entry", :autocomplete => :off %>
      </div>
    </div>
  </div>
</div>

<div class="row left">
  <div class="small-12 columns">
    <%= submit_tag "Sign In", class: 'button tiny radius' %>
  </div>
</div>
<% end %>
</div>
