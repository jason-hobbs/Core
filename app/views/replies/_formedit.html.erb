<%= form_for [@group, @post, @reply], remote:true do |f| %>
  <% if @reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this Reply from being saved:</h2>

      <ul>
      <% @reply.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.text_area :entry, :id => 'editreply' %>
  <br>


    <%= f.submit "Save Reply", class: 'button tiny radius' %> <%= link_to 'Cancel', group_post_reply_path(@group, @post, @reply), class: "button tiny radius", :remote => true %>


<%end%>


<script>
  $(function() {
    $('textarea#editreply').editable({
      inlineMode: false,
      imageUploadURL: '/replyupload',
      headers: {
        'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
      },
      imageUploadParams: {
        id: 'my_editor'
      },
      placeholder: 'Type something',
      buttons: ['bold', 'italic', 'underline', 'fontFamily', 'fontSize', 'color', 'formatBlock', 'blockStyle', 'align', 'insertOrderedList', 'insertUnorderedList', 'outdent', 'indent', 'createLink', 'insertImage', 'insertVideo', 'table', 'undo', 'redo', 'html', 'removeFormat', 'fullscreen'],
    })
  });
</script>
