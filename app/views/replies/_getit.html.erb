<% if @replies %>
  <% @replies.each do |reply| %>
    <div class="row columns">
      <div class="small-12 medium-10 columns">
        <div class="avatar">
          <%= image_tag(reply.user.photo.url, size: "35x35", :class => "gravatar") %>
        </div>
        <div data-id="<%= reply.id %>" class="post-entry reply">
          <div class="post-header">
            <strong><%= reply.user.name %></strong><span class="time"><%= " " + distance_of_time_in_words(reply.created_at, Time.now) + " ago" %></span>
            <% if reply.user.name == @user.name %>
              <%= link_to "#{image_tag("pencil2.png", size: "20")}".html_safe, edit_group_post_reply_path(@group, @post, reply), :title => "Edit", :data => { :replyid => reply.id } %>
            <% end %>
          </div>
          <div class="post-body">
            <%= raw(reply.entry) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
