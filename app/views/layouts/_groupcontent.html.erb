<div class="row columns">
  <div class="small-12 columns">
    <% if @posts %>
      <table id="postrows">
        <tbody id="posts">
          <% @posts.each do |post| %>
            <% cache([post, post.replies.count]) do %>
              <tr data-href= "<%= group_post_path(@group, post) %>">
                <% if post.replies.count > 0 %>
                  <td style="border-left: 5px solid rgb(255, 255, 255);" colspan="2"><%= post.title %><i class="fa fa-comments-o spacer-left" aria-hidden="true"></i><%= post.replies.count %></td>
                <% else %>
                  <td style="border-left: 5px solid rgb(255, 255, 255);" colspan="2"><%= post.title %></td>
                <% end %>
                <td><%= post.updated_at.strftime("%d %b %Y %k:%M") %> </td>
                <td><span class='<%= post.tag.color %> label radius'><%= post.tag.name %></span></td>
                <td><%= image_tag(post.user.photo.url, size: "25x25", :class => "gravatar") + ' ' + post.user.name %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
