<div class="row columns">
  <div class="small-12 columns">
    <% if @posts %>
      <table>
        <tbody id="posts">
          <% @posts.each do |post| %>

            <% unless @last_visit.nil? %>
              <% newcomments = post.replies.where("created_at > ?", @last_visit.to_date) %>
            <% end %>
            <tr>
              <% if newcomments.nil? %>
                <% newcomments = 0 %>
              <% end %>
              <% if newcomments.size > 0 %>
                <td colspan="2"><%= link_to post.title, [@group, post] %> New!</td>
              <% else %>
                <td colspan="2"><%= link_to post.title, [@group, post] %></td>
              <% end %>
              <td><%= distance_of_time_in_words(post.created_at, Time.now) %> ago</td>
              <td><span class='<%= post.tag.color %> label radius'><%= post.tag.name %></span></td>
              <td><%= image_tag(post.user.photo.url, size: "25x25", :class => "gravatar") + ' ' + post.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
