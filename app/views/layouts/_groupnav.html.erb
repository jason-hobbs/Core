<div class="row columns">
  <div class="small-12 columns">

    <a href="#" data-dropdown="drop1" class="button dropdown tiny radius"><%= @group.name %></a>
    <ul id="drop1" data-dropdown-content class="f-dropdown">
      <% @allowed.each do |group| %>
        <% unless @group.name == group.name %>
          <li><%= link_to group.name, group %></li>
        <% end %>
      <% end %>
    </ul>


    <%= link_to '+   Post', new_group_post_path(@group), :class=>'button tiny radius' %>

  </div>
</div>
