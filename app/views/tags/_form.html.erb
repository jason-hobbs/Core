<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row left">
  <div class="small-12 medium-4 columns">
    <%= f.label "Tag Name", class: "bold" %><br>
    <%= f.text_field :name, class: "radius" %>
  </div>
</div>

<div class="row left">
  <div class="small-12 medium-4 columns">
    <%= f.select :color, options_for_select(%w[alert default info secondary success warning]) %>
  </div>
</div>

<div class="row left">
  <div class="small-12 medium-4 columns">
  <% if @tag.new_record? %>
    <%= f.submit "Create Tag", class: 'button tiny radius' %>
  <% else %>
    <%= f.submit "Update Tag",  class: 'button tiny radius' %>
<% end %>


<% end %>
