<div class="bodywrapper">
<br>
<div class="head">test<div class="dropper">Close</div></div>
<div class="row columns">
  <div class="small-12 medium-10 columns">
    <h3 id="storyheader"><%= @post.title %></h3>
    <hr>
  </div>
</div>

<div class="row columns">
  <div class="small-12 medium-10 columns ">
    <div class="avatar">
      <%= profile_image_for(@post.user, size: 35) %>
    </div>
    <div class="post-entry">
      <strong><%= @post.user.name %></strong>
      <br><br>
      <%= raw(@post.entry) %>
    </div>
    <br>
    <!-- <div class="post-button dropper">+ REPLY</div> -->
    <%= link_to '+   REPLY', new_group_post_reply_path(@group, @post), :class=>'post-button' %>
    <hr>
  </div>
</div>



<div class="row columns">
  <div class="small-12 medium-10 columns ">
    <% if @replies %>
      <% @replies.each do |reply| %>
        <div class="avatar f4-color">
          <%= profile_image_for(reply.user, size: 35) %>
        </div>
        <div class="reply f4-color">
          <strong><%= reply.user.name %></strong>
          <br><br>
          <%= raw(reply.entry) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


</div>
